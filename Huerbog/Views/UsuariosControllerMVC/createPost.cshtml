@model Huerbog.Models.Request.ForoTemaModel

@{
    ViewData["Title"] = "CrearPublicacion";
    Layout = "_LayoutRegistrado";
}

<h1>Crear Publicacion</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="UsuariosControllerMVC" asp-action="createPost">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DescPost" class="control-label"></label>
                <input asp-for="DescPost" class="form-control" />
                <span asp-validation-for="DescPost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TituloPost" class="control-label"></label>
                <input asp-for="TituloPost" class="form-control" />
                <span asp-validation-for="TituloPost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UrlImg" class="control-label"></label>
                <input asp-for="UrlImg" class="form-control" />
                <span asp-validation-for="UrlImg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contenido" class="control-label"></label>
                <input asp-for="Contenido" class="form-control" />
                <span asp-validation-for="Contenido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCatPublFk" class="control-label"></label>
                <select asp-for="IdCatPublFk" asp-items="@(new SelectList(ViewBag.catList, "IdCatPubl", "TipoPubl"))"></select>
                <span asp-validation-for="IdCatPublFk" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear publicación" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home2" asp-action="IndexRegistrado">Regresar</a>
</div>