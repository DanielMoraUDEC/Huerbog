@model Huerbog.Models.UserList.UserForoModel

@{
    ViewData["Title"] = "viewUser";
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/nav.css" />
<link rel="stylesheet" href="~/css/menuLateral.css" />
<link rel="stylesheet" href="~/css/neon1.css" />
<link rel="stylesheet" href="~/css/NavigationPanel.css" />

<script>

    /* Set the width of the side navigation to 250px */
    function openNav() {
        document.getElementById("mySidenav").style.width = "260px";
    }

    /* Set the width of the side navigation to 0 */
    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
    }
</script>

<div id="mySidenav" class="sidenav1">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a asp-area="" asp-controller="ForoControllerMVC" asp-action="IndexForoList">Inicio</a>
    <a asp-controller="ForoControllerMVC" asp-action="searchRed">Ver lista de redes</a>
    <a asp-controller="ForoControllerMVC" asp-action="mapaHuertas">Mapa de huertas</a>
    <a asp-controller="ForoControllerMVC" asp-action="pagOficiales">Información general</a>

    <a asp-controller="ForoControllerMVC" asp-action="sendComm">Envíar comentarios sobre el sitio</a>
</div>

<!-- Use any element to open the sidenav -->

<br />
<input type="checkbox" id="btn-menu" onclick="openNav()">
<label for="btn-menu" class="lbl-menu">
    <span id="spn1"></span>
    <span id="spn2"></span>
    <span id="spn3"></span>
</label>
<div class="main">
    <h1>Ver usuario</h1>

    <div>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <div class="container mb-2">
                    <div class="col-md-4">
                        <label>
                            <strong>
                                Nombre
                            </strong>
                        </label>
                        @Html.DisplayFor(model => model.user.Nombre)
                    </div>
                    <br />
                    <div class="col-md-4">
                        <label>
                            <strong>
                                Apellido
                            </strong>
                        </label>
                        @Html.DisplayFor(model => model.user.Apellido)
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="container mb-2">
                    <div class="col-md-4">
                        <label>
                            <strong>
                                Correo
                            </strong>
                        </label>
                        @Html.DisplayFor(model => model.user.Correo)
                    </div>
                    <br />
                    <div class="col-md-4">
                        <label>
                            <strong>
                                Reputación
                            </strong>
                        </label>
                        @Html.DisplayFor(model => model.user.Reputacion)
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="container mb-2">
                    <div class="col-md-12">
                        <label>
                            <strong>
                                Red
                            </strong>
                        </label>
                        <br />
                        @Html.DisplayFor(model => model.user.Red)
                    </div>
                    <br />
                    <div class="col-md-12">
                        <label>
                            <strong>
                                Descripción de huerta
                            </strong>
                        </label>
                        <br />
                        @Html.DisplayFor(model => model.userHuerta.DescHuerta)
                    </div>
                </div>
            </div>
        </div>

        <h4 style="text-align:center">Publicaciones realizadas</h4>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Título
                    </th>
                    <th>
                        Descripción
                    </th>
                    <th>
                        Categoría
                    </th>
                    <th>
                        Fecha de publicación
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.userForo)
                {
                    <tr>
                        <td>
                            <a asp-controller="ForoControllerMVC" asp-action="verPost" asp-route-id="@item.IdPost">@Html.DisplayFor(modelItem => item.TituloPost)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescPost)
                        </td>
                        <td>
                            @if (item.IdCatPublFk == 1)
                            {
                                <div>
                                    General
                                </div>
                            }
                            else
                            {
                                <div>
                                    Comercio
                                </div>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaPublicacion)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <a asp-controller="ForoControllerMVC" asp-action="searchRed" class="btn-regresar">Regresar</a>
    </div>
</div>
<br />
<br />
