@model Huerbog.Models.UserList.UserForoModel

@{
    ViewData["Title"] = "viewUser";
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
<link rel="stylesheet" href="~/css/nav.css" />
<script>

    /* Set the width of the side navigation to 250px */
    function openNav() {
        document.getElementById("mySidenav").style.width = "160px";
    }

    /* Set the width of the side navigation to 0 */
    function closeNav() {
        document.getElementById("mySidenav").style.width = "0";
    }
</script>

<div id="mySidenav" class="sidenav">
    <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
    <a asp-area="" asp-controller="ForoControllerMVC" asp-action="IndexForoList">Inicio</a>
    <a asp-controller="ForoControllerMVC" asp-action="searchRed">Ver lista de redes</a>
    <a asp-controller="ForoControllerMVC" asp-action="mapaHuerta">Mapa de huertas</a>>
</div>

<!-- Use any element to open the sidenav -->

<button asp-for="Reacciones" onclick="openNav()" class="fas fa-align-justify"></button>

<div class="main">
    <h1>Ver usuario</h1>

    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.user.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.user.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.user.Apellido)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.user.Apellido)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.user.Correo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.user.Correo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.user.Reputacion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.user.Reputacion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.user.Red)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.user.Red)
            </dd>
            <dt class="col-sm-2">
                Descripción de la huerta
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.userHuerta.DescHuerta)
            </dd>
        </dl>

        <h4>Publicaciones realizadas</h4>
        
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Título
                    </th>
                    <th>
                        Descripción
                    </th>
                    <th>
                        Categoría
                    </th>
                    <th>
                        Fecha de publicación
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.userForo)
                {
                    <tr>
                        <td>
                            <a asp-controller="ForoControllerMVC" asp-action="verPost" asp-route-id="@item.IdPost">@Html.DisplayFor(modelItem => item.TituloPost)</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DescPost)
                        </td>
                        <td>
                            @if (item.IdCatPublFk == 1)
                            {
                                <div>
                                    General
                                </div>
                            }
                            else
                            {
                                <div>
                                    Comercio
                                </div>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaPublicacion)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <a asp-controller="ForoControllerMVC" asp-action="searchRed">Regresar</a>
    </div>
</div>

